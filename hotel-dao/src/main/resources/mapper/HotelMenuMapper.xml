    <resultMap id="MenuWithRole" type="com.house.hotel.dao.model.HotelMenuConverterModel" extends="BaseResultMap1">
        <collection property="roles" ofType="com.house.hotel.dao.entity.HotelRole">
            <id column="rid" property="id"/>
            <result column="rname" property="name"/>
            <result column="role_name" property="roleName"/>
        </collection>
    </resultMap>

    <select id="getAllMenusWithRole" resultMap="MenuWithRole">
    select m.*,
    r.`id` as rid,
    r.`name` as rname,
    r.`role_name`
    from hotel_menu m,hotel_menu_role mr,hotel_role r
    where m.`id`=mr.`menu_id` and mr.`role_id`=r.`id` order by m.`id`
  </select>

    <select id="getMenuByUserId" resultMap="BaseResultMap">
   SELECT DISTINCT
	    m1.*
    FROM
	    hotel_menu m1,
	    hotel_user_role hrr,
	    hotel_menu_role mr
    WHERE
	    hrr.user_id =1
	    and hrr.role_id=mr.role_id and mr.menu_id=m1.id and m1.`disabled`=1
  </select>
</mapper>